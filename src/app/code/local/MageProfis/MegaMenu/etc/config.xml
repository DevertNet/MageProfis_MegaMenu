<?xml version="1.0"?>
<config>
    <modules>
        <MageProfis_MegaMenu>
            <version>1.0.0.0</version>
        </MageProfis_MegaMenu>
    </modules>
    <global>
        <blocks>
            <megamenu>
                <class>MageProfis_MegaMenu_Block</class>
            </megamenu>
        </blocks>
        <models>
            <megamenu>
                <class>MageProfis_MegaMenu_Model</class>
            </megamenu>
        </models>
        <helpers>
            <megamenu>
                <class>MageProfis_MegaMenu_Helper</class>
            </megamenu>
        </helpers>
        <events>
            <core_layout_update_updates_get_after>
                <observers>
                    <mageprofis_megamenu_add_layout_updates>
                        <type>singleton</type>
                        <class>megamenu/observer</class>
                        <method>addLayoutXml</method>
                    </mageprofis_megamenu_add_layout_updates>
                </observers>
            </core_layout_update_updates_get_after>
        </events>
    </global>
    <frontend>
        <routers>
            <megamenu>
                <use>standard</use>
                <args>
                    <module>MageProfis_MegaMenu</module>
                    <frontName>dropdown</frontName>
                </args>
            </megamenu>
        </routers>   
    </frontend>
    <adminhtml>
       <translate>
           <modules>
               <translations>
                   <files>
                       <default>MageProfis_MegaMenu.csv</default>
                   </files>
               </translations>
           </modules>
       </translate>
    </adminhtml>
</config>
